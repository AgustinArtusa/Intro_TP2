generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
}

model Usuario {
  id          Int     @id @default(autoincrement())
  nombre      String
  username    String
  contrase√±a  String
  dinero      Decimal @default(0)
  telefono    Int
  rol         String @default("comprador")
  compras     Compra[]
}

model Articulo {
  id             Int     @id @default(autoincrement())
  nombre         String
  precio         Decimal
  descripcion    String
  origen         String
  antiguedad     String
  numero_vendedor Int   @default(0)
  EnVenta        Boolean @default(true)
  cantidad       Int   @default(1)
  compras        Compra[]
  disponibilidad Disponibilidad[]
}

model Tienda {
  id                    Int     @id @default(autoincrement())
  ubicacion             String
  horario               String
  estado                String
  telefono              Int
  email_contacto        String
  articulosDisponibles  Disponibilidad[]
}

model Disponibilidad {
  id          Int      @id @default(autoincrement())
  articuloId  Int
  tiendaId    Int
  disponible  Boolean @default(true)
  articulo    Articulo @relation(fields: [articuloId], references: [id])
  tienda      Tienda   @relation(fields: [tiendaId], references: [id])
}

model Compra {
  id          Int @id @default(autoincrement())
  usuarioId   Int
  articuloId  Int
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
  articulo    Articulo @relation(fields: [articuloId], references: [id])
}