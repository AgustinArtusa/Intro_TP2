generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          Int     @id @default(autoincrement())
  nombre      String
  username    String
  contrase√±a  String
  dinero      Decimal @default(0)
  telefono    Int
  compras     Compra[]
}

model Articulo {
  id          Int     @id @default(autoincrement())
  nombre      String
  precio      Decimal
  descripcion String
  origen      String
  antiguedad  String
  disponible  Boolean @default(true)
  tiendaId    Int
  tienda      Tienda   @relation(fields: [tiendaId], references: [id])
  compras     Compra[]
}

model Tienda {
  id                 Int     @id @default(autoincrement())
  ubicacion          String
  horario            String
  estado             String
  telefono           Int
  email_contacto     String
  articulos          Articulo[]
}

model Compra {
  id          Int @id @default(autoincrement())
  usuarioId   Int
  articuloId  Int
  fecha       DateTime @default(now())

  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
  articulo    Articulo @relation(fields: [articuloId], references: [id])

  @@unique([usuarioId, articuloId])
}